{
  "name": "PlatformIO",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "ms-vscode.cpptools",
        "platformio.platformio-ide"
      ]
    }
  },
  "forwardPorts": [
    8008
  ],
  "mounts": [ // https://blog.golioth.io/usb-docker-windows-macos/
    "source=/dev/,target=/dev/,type=bind,consistency=consistent"
  ],
  "runArgs": [
    "--privileged",
    "--pid=host"
  ],
  "features": {}
}